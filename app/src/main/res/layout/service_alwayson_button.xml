<?xml version="1.0" encoding="utf-8"?>
<com.example.focuson.FocusOnLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#99123456"
        android:layout_above="@id/window"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"/>


    <LinearLayout
        android:id="@+id/window"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/window"
        android:background="#99123456"
        android:orientation="horizontal" />

</com.example.focuson.FocusOnLayout>